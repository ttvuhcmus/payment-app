<div class="changePassword d-flex justify-content-center">
    <div class="group col-8">
        {{#if success}}
        <div class="alert alert-success" role="alert">
            Change success
        </div>
        {{/if}}
        {{#if fail}}
        <div class="alert alert-danger" role="alert">
            Change fail!
        </div>
        {{/if}}

        <form action="changePassword" method="post">
            <div class="mb-3 row">
                <label for="inputOldPassword" class="col-sm-4 col-form-label">Old password</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputOldPassword" name="old_password" />
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputNewPassword" class="col-sm-4 col-form-label">New password</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputNewPassword" name="new_password" />
                </div>
            </div>
            <div class="mb-3 row">
                <label for="inputconfirmPassword" class="col-sm-4 col-form-label">Confirm
                    password</label>
                <div class="col-sm-8">
                    <input type="text" class="form-control" id="inputconfirmPassword" name="confirm_password" />
                </div>
            </div>

            <button type="submit" class="btn btn-success float-end my-5">Change</button>
        </form>
    </div>
</div>